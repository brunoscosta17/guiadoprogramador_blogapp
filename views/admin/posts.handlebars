<h2>Posts List</h2>
<hr>
<a href="/admin/post/add"><button class="btn btn-secondary">New Post</button></a>

{{#each post}}
    <div class="card mt-4">
        <div class="card-body">
        <h4>{{title}}</h4>
        <p>Description: {{description}}</p>
        <small>Category: {{category.name}}</small>
        <small>Date: {{createdAt}}</small><br>
        <a href="/admin/posts/edit/{{_id}}"><button class="btn btn-success mt-3">Edit</button></a>
        
        <form action="/admin/posts/delete" method="POST">
            <input type="hidden" name="id" value="{{_id}}">
            <button type="submit" class="btn btn-danger mt-2">Delete</button>
        </form>
    </div>
    </div>
    {{else}}
    <h4 class="mt-2">Nenhum post registrado!</h4>
{{/each}}